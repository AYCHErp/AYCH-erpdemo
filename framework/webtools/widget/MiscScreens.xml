                        <label text="max-depth 1" style="heading"/>
                        <include-menu name="LayoutDemoTest3" location="component://webtools/widget/Menus.xml" max-depth="1"/>
                        <label text="sub-menus 'none' filter (same as max-depth 1)" style="heading"/>
                        <include-menu name="LayoutDemoTest3" location="component://webtools/widget/Menus.xml" max-depth="-1" sub-menus="none"/>
