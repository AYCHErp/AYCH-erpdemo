<?xml version="1.0" encoding="UTF-8" ?>
<seo-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../dtd/SeoConfig.xsd">
    <regexpifmatch>^.*/.*$</regexpifmatch>

    <category-url>
        <value>enable</value>
        <!-- enable/disable
          1. if enable, the product seo url will be /product-name-product-id.html or /category-name-product-name-product-id.html
          2. if disable, the CatalogUrlServlet.makeCatalogUrl will be used -->
        <allowed-context-paths>/:/shop</allowed-context-paths> <!-- /:/ecommerce -->
        <!-- if category-url is enabled, only context paths listed here will be allowed to use the new seo transformers -->
        <category-name>enable</category-name>
        <!-- enable/disable
          1. if enable, the product seo url will be /category-name(-category-id)[-/]product-name-product-id.html -> see category-name-separate-path-elem
          2. if disable, the product seo url will be /product-name-product-id.html -->
        <category-url-suffix></category-url-suffix> <!-- .html -->
        <!-- suffix to add to the product seo url -->
        <category-name-max-length>24</category-name-max-length>
        <product-name-max-length>40</product-name-max-length>
        <!-- SCIPIO: new property to set max names -->
        <names-locale-override>de</names-locale-override>
        <!-- SCIPIO: Must override this to de because user accounts not set to de -->
        <!--<category-name-separate-path-elem>enable</category-name-separate-path-elem>-->
        <!-- instead of hyphen. SCIPIO: 2017-11-08: category-name-separate-path-elem setting currently always enabled  -->
        <category-name-append-id>disable</category-name-append-id> 
        <!-- only used if category-name-separate-path-elem enabled. -->
        <product-name-append-id>enable</product-name-append-id>
        <!-- SCIPIO: 2017: extra product-name-append-id control: leave enabled for now -->
        <handle-implicit-requests>disable</handle-implicit-requests> 
        <!-- i.e. requests without a specific /product or /categorie name 
             Possible for Scipio, but could cause conflicts with other requests -->
        <implicit-request-name-matches-only>disable</implicit-request-name-matches-only> 
        <!-- If enabled, implicit requests will only match category name paths or name+id paths, but not IDs alone (which may be too generic) 
             SCIPIO: 2017: WARNING: this SHOULD be enabled by default, but we currently cannot set enable as default
             for Scipio because it requires all alt URLs to be generated, because otherwise the fallbacks by ID simply fail -->
        <generate-implicit-category-url>disable</generate-implicit-category-url>
        <!-- implicit category URLs, possible for Scipio -->
        <generate-implicit-product-url>disable</generate-implicit-product-url>
        <!-- implicit product URLs not (always) possible for Scipio at the moment, but can enable
             and code will decide if can do or not -->
    </category-url>

    <!-- Done by URLRewriteFilter and web.xml settings -->
    <jsessionid>
        <anonymous>
            <value>disable</value>
            <!-- enable/disable
              1. when disable, the seo url patterns that contains jsessionid will be applied;
              2. when enable, the seo url patterns that contains jsessionid will be skipped -->
        </anonymous>
        <user>
            <value>disable</value>
            <!-- enable/disable
              1. when disable, the url-patterns under exceptions will be used to skip the seo url patterns that contains jsessionid;
              2. when enable, the seo url patterns that contains jsessionid will be skipped -->
            <exceptions>
                <url-pattern>^.*/(keywordsearch|logout).*$</url-pattern>
                <!-- sample: ^.*/(keywordsearch|logout).*$ -->
            </exceptions>
        </user>
    </jsessionid>

    <url-configs>
        <!-- Example
        <url-config>
            <description>sample: remove /main</description>
            <url-pattern>^/main$</url-pattern>
            <seo>
                <replacement>/</replacement>
            </seo>
            <forward>
                <replacement>/</replacement>
                <responsecode>301</responsecode>
            </forward>
        </url-config> -->
    </url-configs>

    <!-- Note: These could be done URLRewriteFilter but might be advantage to have regexp specific to prod/catalog links -->
    <char-filters>
        <char-filter>
            <character-pattern>\u00fc</character-pattern>
            <replacement>ue</replacement>
        </char-filter>
        <char-filter>
            <character-pattern>\u00e4</character-pattern>
            <replacement>ae</replacement>
        </char-filter>
        <char-filter>
            <character-pattern>\u00f6</character-pattern>
            <replacement>oe</replacement>
        </char-filter>
        <char-filter>
            <character-pattern>\u00df</character-pattern>
            <replacement>ss</replacement>
        </char-filter>
        <char-filter>
            <character-pattern>\\+</character-pattern>
            <replacement>und</replacement>
        </char-filter>
        <char-filter>
            <character-pattern>\u0026</character-pattern>
            <replacement>und</replacement>
        </char-filter>
        <char-filter>
            <character-pattern>Ã¨</character-pattern>
            <replacement>e</replacement>
        </char-filter>
        <!-- please keep the following 2 filters, don't remove them -->
        <char-filter>
            <character-pattern>[^A-Za-z0-9+-]</character-pattern>
            <replacement>-</replacement>
        </char-filter>
        <char-filter>
            <character-pattern>-{2,}</character-pattern>
            <replacement>-</replacement>
        </char-filter>
    </char-filters>
</seo-config>
