<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">
    <screen name="CommonRoutingDecorator">
        <section>
            <actions>
                <set field="activeMainMenuItem" from-field="activeMainMenuItem" default-value="routing"/>
                <set field="activeSubMenu" from-field="activeSubMenu" default-value="Routing"/>
                
                <set field="workEffortId" from-field="parameters.workEffortId"/>
                <entity-one entity-name="WorkEffort" value-field="routing"/>
                
                <set field="titleFormat" value="\${finalTitle} ${routing.workEffortName} [${routing.workEffortId}]"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="left-column" use-when="${context.widePage != true}" override-by-auto-include="true">
                        <!-- override left-column for routing field check -->
                        <section>
                            <!-- do check for MANUFACTURING, _VIEW permission -->
                            <condition>
                                <and>
                                    <if-has-permission permission="MANUFACTURING" action="_VIEW"/>
                                    <not><if-empty field="routing"/></not>
                                </and>
                            </condition>
                            <widgets>
                                <include-screen name="MainSideBarMenu" location="${parameters.mainDecoratorLocation}"/>
                            </widgets>
                            <fail-widgets>
                                <include-screen name="DefMainSideBarMenu" location="${parameters.mainDecoratorLocation}"/>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                    <decorator-section name="body">
                        <section>
                            <!-- do check for MANUFACTURING, _VIEW permission -->
                            <condition>
                                <if-has-permission permission="MANUFACTURING" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <!--<section>
                                    <condition>
                                        <not><if-empty field="routing"/></not>
                                    </condition>
                                    <widgets>
                                        <include-menu name="RoutingTabBar" location="component://manufacturing/widget/manufacturing/ManufacturingMenus.xml"/>
                                    </widgets>
                                </section>-->
                                <!-- SCIPIO: integrate into title like other apps
                                <label style="heading">[${uiLabelMap.CommonId} ${routing.workEffortId}] ${routing.workEffortName}</label> -->
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="common-msg-error-perm">${uiLabelMap.ManufacturingViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    <screen name="CommonRoutingTaskDecorator">
        <section>
