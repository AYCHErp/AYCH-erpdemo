                                    </condition>
                                    <widgets>
                                        <screenlet title="${uiLabelMap[labelTitleProperty]} ${uiLabelMap.CommonFor}: ${currentValue.contentName},${currentValue.description} [${currentValue.contentId}]  ${${extraFunctionName}}">
                                            <decorator-section-include name="body"/>
                                        </screenlet>
                                    </widgets>
                                    <fail-widgets>
