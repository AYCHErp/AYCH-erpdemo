                <set field="activeSubMenu" from-field="activeSubMenu" default-value="RoutingTask"/>
            
                <set field="workEffortId" from-field="parameters.workEffortId"/>
                <entity-one entity-name="WorkEffort" value-field="routingTask"/>
                
                <set field="titleFormat" value="\${finalTitle} ${routingTask.workEffortName} [${routingTask.workEffortId}]"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="left-column" use-when="${context.widePage != true}" override-by-auto-include="true">
                        <!-- override left-column for routingTask field check -->
                        <section>
                            <!-- do check for MANUFACTURING, _VIEW permission -->
                            <condition>
                                <and>
                                    <if-has-permission permission="MANUFACTURING" action="_VIEW"/>
                                    <not><if-empty field="routingTask"/></not>
                                </and>
                            </condition>
                            <widgets>
                                <include-screen name="MainSideBarMenu" location="${parameters.mainDecoratorLocation}"/>
                            </widgets>
                            <fail-widgets>
