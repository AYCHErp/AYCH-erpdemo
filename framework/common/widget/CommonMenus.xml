<!-- Cato: NOTES: 
    * As of 06/07/2015 the ofbiz standard Menu-widget has been expanded by a default-link-style attribute.
    * The widget attribute "selected" usually translates to "active" in styles hash/FTL/CSS terminology (where "selected" may mean something else).
      This is because there's only one highlight option for widgets and by convention the selected widget attrib should practically always be used to select the "active" menu item. 
    * menu-container-style is currently specially interpreted by htmlMenuMacroLibrary.ftl, and recognized plain "menu-xxx" style names are already mapped to "menu_xxx" entries in styles hash.
    * The base class choice may affect more than only styling; may affect some functionality, such as choice of selected-menuitem-context-field-name.
      Watch out for selected-menuitem-context-field-name, or active/selected entries may not work.
      For selected-menuitem-context-field-name, individual menu can override if base value is no good.
    * See standard Cato global styles hash for other notes. -->
<menus xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-menu.xsd">

    <!-- Cato: Original stock Ofbiz base app bar menu, modified. -->
    <menu name="CommonAppBarMenu" default-menu-item-name="main" id="app-navigation" type="simple" title="${applicationTitle}&amp;nbsp;"
        default-selected-style="${styles.menu_main_itemactive}" menu-container-style="menu-main" default-link-style="${styles.menu_main_item_link}" 
        selected-menuitem-context-field-name="headerItem" items-sort-mode="displaytext-ignorecase">
        <menu-item name="main" title="${uiLabelMap.CommonDashboard}" sort-mode="off" widget-style="${styles.menu_sidebar_itemdashboard}">
            <condition><not><if-empty field="userLogin"/></not></condition>
            <link target="main" link-type="anchor"/>
        </menu-item>
    </menu>
    
    <!-- Cato: New dashboard app bar menu. -->
    <menu name="CommonAppBarDashboardMenu" default-menu-item-name="main" id="app-navigation" type="simple" title="${applicationTitle}&amp;nbsp;"
        default-selected-style="${styles.menu_main_itemactive}" menu-container-style="menu-main" default-link-style="${styles.menu_main_item_link}" selected-menuitem-context-field-name="headerItem" items-sort-mode="displaytext-ignorecase">
        <menu-item name="main" title="${uiLabelMap.CommonDashboard}" sort-mode="off" widget-style="${styles.menu_sidebar_itemdashboard}">
            <condition><not><if-empty field="userLogin"/></not></condition>
            <link target="main" link-type="anchor"/>
        </menu-item>
    </menu>
    
    <!-- Cato: New menu for sidebars derived from main app bar menus. Should have mostly minor differences with CommonSideBarMenu. -->
    <menu name="CommonAppSideBarMenu" type="simple" menu-container-style="menu-sidebar" default-link-style="${styles.menu_sidebar_item_link}" selected-menuitem-context-field-name="headerItem" default-selected-style="${styles.menu_sidebar_itemactive}" items-sort-mode="displaytext-ignorecase">
        <menu-item name="main" title="${uiLabelMap.CommonDashboard}" sort-mode="off" widget-style="${styles.menu_sidebar_itemdashboard}" >
            <condition><not><if-empty field="userLogin"/></not></condition>
            <link target="main" link-type="anchor"/>
        </menu-item>
    </menu>

    <!-- Cato: Original stock Ofbiz base tab bar menu, modified. 
        NOTE: Despite individual menu names, some "*ButtonBar"-named menus belong more as extending this CommonTabBarMenu instead of CommonButtonBarMenu. -->
    <menu name="CommonTabBarMenu" selected-menuitem-context-field-name="tabButtonItem" type="simple"
          menu-container-style="menu-tab" default-selected-style="${styles.menu_tab_itemactive}" default-link-style="${styles.menu_tab_item_link}"/>
    
    <!-- Cato: New menu for sub-tar bars. 
        NOTE: I'm not sure if tabButtonItem is appropriate in all cases, but individual menus can always override... -->
    <menu name="CommonSubTabBarMenu" selected-menuitem-context-field-name="tabButtonItem" type="simple"
          menu-container-style="menu-tab" default-selected-style="${styles.menu_subtab_itemactive}" default-link-style="${styles.menu_subtab_item_link}"/>

    <!-- Cato: Original stock Ofbiz base button bar menu, modified. 
        NOTE: Not all stock Ofbiz menus named "*ButtonBar" should extend CommonButtonBarMenu!
        WARN: This does not include a selected-menuitem-context-field-name. Menus must specify it themselves! -->
    <menu name="CommonButtonBarMenu" type="simple" menu-container-style="menu-button" default-widget-style="" default-link-style="${styles.menu_button_item_link}" default-selected-style="${styles.menu_button_itemactive}" />    
    
    <!-- Cato: New menu for sidebars, usually derived from tar bar menus. 
        NOTE: Screens expect this to be similar in function as CommonTabBarMenu. For sidebars that deviate, use/make another Common* base menu class. For menus whose contents derive from main app menus, use CommonAppSideBarMenu. -->
    <menu name="CommonSideBarMenu" selected-menuitem-context-field-name="tabButtonItem" type="simple" menu-container-style="menu-sidebar" default-link-style="${styles.menu_sidebar_item_link}" default-selected-style="${styles.menu_sidebar_itemactive}" items-sort-mode="displaytext-ignorecase">
        <menu-item name="main" title="${uiLabelMap.CommonDashboard}" sort-mode="off" widget-style="${styles.menu_sidebar_itemdashboard}">
            <condition><not><if-empty field="userLogin"/></not></condition>
            <link target="main" link-type="anchor"/>
        </menu-item>
    </menu>
    
</menus>
